<div class="pull-right"><%= link_to 'Create Company', new_company_path, class: 'btn btn-primary' %></div>

<table border=1 class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Suffix</th>
      <th>Catchphrase</th>
      <th>Email</th>
      <th>Start Date</th>
      <th>Industry</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
    <tr>
      <td><%= link_to company.name, company_path(company) %></td>
      <td><%= company.suffix %></td>
      <td><%= company.catch_phrase %></td>
      <td><%= company.email %></td>
      <td><%= company.start_date %></td>
      <td><%= company.industry %></td>
    </tr>
    <% end %>
  </tbody>
</table>
