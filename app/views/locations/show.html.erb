<div class="page-header">
  <h1><%= @location.city %></h1>
</div>

<div class="row">
  <div class="col-md-4">
    <ul class="list-group">
      <li class="list-group-item"><b>City: </b><%= @location.city %></li>
      <li class="list-group-item"><b>Street Name: </b><%= @location.street_name %></li>
      <li class="list-group-item"><b>State: </b><%= @location.state %></li>
      <li class="list-group-item"><b>Zip Code: </b><%= @location.zip_code %></li>
      <li class="list-group-item"><b>Country: </b><%= @location.country %></li>
      <li class="list-group-item">
        <%= link_to 'Delete', company_location_path(@company, @location), method: :delete, data: {confirm: "Are you totally sure??"}, class: 'btn btn-danger' %>
        <%= link_to 'Edit', edit_company_location_path(@company, @location), class: 'btn btn-warning' %>
        <%= link_to 'Back', company_path(@company), class: 'btn btn-default' %>
      </li>
    </ul>
  </div>
</div>
